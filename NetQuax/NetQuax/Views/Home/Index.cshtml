@model NetQuax.Models.HomePageModel
@{
  ViewBag.Title = "Home Page";
}

<div class="row margin-top-10">
  <div class="col-sm-3"><b>Featured Movies:</b></div>
  <div class="col-sm-9"></div>
</div>
<!-- FEATURED MOVIES-->
<div id="myCarousel" class="carousel slide margin-top-10 margin-bottom-20" data-ride="carousel" data-interval="false">
  <!-- Indicators
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>-->
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="row" style="background-color: white;">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
          <div class="row">

            @{
              foreach (NetQuax.Entities.Movie m in Model.FeaturedMovies)
              {
                <div style="text-align:center;" class="col-sm-4">
                  <img onclick="showDetailModal(@m.MovieId)" style="height:300px; width:200px;" src=" @("/images/" + m.Title + ".jpg")" />
                </div>

              }

            }
          </div>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>

    <div class="item">
      <div class="row" style="background-color: white;">
        <div class="col-sm-1"></div>
