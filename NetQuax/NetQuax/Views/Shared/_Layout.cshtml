<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NetQuax</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="top-header"></div>
    
    <div class="container body-content">
        <div class="row" style="margin-bottom:10px;">
            <div class="col-sm-2">Home</div>
            <div class="col-sm-2">Browse</div>
            <div class="col-sm-4 netquax-navbar"><p style="display:inline-block; width:40%;">Search: </p><input style="display:inline-block; width: 40%;"type="text"class="form-control"/></div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NetQuax</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
