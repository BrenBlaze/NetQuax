<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NetQuax</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="top-header"></div>
    
    <div class="container body-content">
        <div class="row" style="margin-bottom:10px;">
            <div class="col-sm-2"><p style="padding: 10px; margin-top:15px;">Homes</p></div>
            <div class="col-sm-2"><p style="padding: 10px; margin-top:15px;">Browse</div>
            <div class="col-sm-6 netquax-navbar"><p style="display:inline-block; padding:1px;"></p><input style="display:inline-block;float:right; " type="text" class="form-control" /></div>
        </div>
        <hr />
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - NetQuax</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
